<div class="content">
  <div class="container" style="margin:100px auto">
    <div class="row">
      <div class="col">
        <p class="text-end">
          <span>Hola {{persona}}!</span>
          <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i
              class="fas fa-sign-out-alt"></i></a>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-7">
        <h2>Listado de Novedades</h2>
      </div>
      <div class="col-2 text-end">
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
      </div>
      <div class="col-3 text-end">
        <form class="form-inline" action="/admin/novedades" method="get">
          <div class="input-group">
            <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}
              value="{{q}}" {{/if}}>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col" class="text-end">Imagen</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td class="text-end">{{{imagen}}}</td>
            <td class="text-end">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                <i class="fas fa-pencil-alt"></i></a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{#if is_search}}
      {{#unless novedades.length}}
      No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}
    </div>
  </div>
</div>
</div>